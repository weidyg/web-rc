{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@web-rc/biz-components": ["./packages/components/src/index.tsx"],
      "@web-rc/biz-utils": ["./packages/utils/src/index.tsx"],
      "@web-rc/biz-provider": ["./packages/provider/src/index.tsx"],
      "@web-rc/biz-layout": ["./packages/layout/src/index.tsx"],
      "@web-rc/biz-product": ["./packages/product/src/index.tsx"],
      "@web-rc/biz-account": ["./packages/account/src/index.tsx"]
    }
  },
  "include": [".dumirc.ts"]
}
